<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="STUDENT-TASKS-001" author="petrushin_ss">
        <preConditions>
            <not>
                <sequenceExists schemaName="REPOSITORY" sequenceName="STUDENT_TASKS_SEQ"/>
            </not>
        </preConditions>
        <createSequence schemaName="REPOSITORY" sequenceName="STUDENT_TASKS_SEQ" startValue="1"/>
    </changeSet>

    <changeSet id="STUDENT-TASKS-002" author="petrushin_ss">


        <preConditions>
            <not>
                <tableExists schemaName="REPOSITORY" tableName="STUDENT_TASKS"/>
            </not>
        </preConditions>


        <createTable schemaName="REPOSITORY" tableName="STUDENT_TASKS">
            <column name="STUDENT_TASK_ID" type="INT" defaultValueSequenceNext="STUDENT_TASK_SEQ">
                <constraints primaryKey="true" primaryKeyName="STUDENT_TASK_PK"/>
            </column>

            <column name="USER_ID" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="TASK_ID" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="TASK_STATUS_ID" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="EXPIRIED" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="CREATED" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="MODIFIED" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>
</databaseChangeLog>